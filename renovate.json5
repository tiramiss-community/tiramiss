{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"timezone": "Asia/Tokyo",
	"schedule": [
		"* 0 * * *"
	],
	"prHourlyLimit": 5,
	"packageRules": [
		{
			"groupName": "[Backend] Update dependencies",
			"matchPaths": [
				"packages/backend/**"
			]
		},
		{
			"groupName": "[Frontend] Update dependencies",
			"matchPaths": [
				"packages/frontend/**",
				"packages/frontend-embed/**",
				"packages/frontend-shared/**",
				"packages/misskey-bubble-game/**",
				"packages/misskey-reversi/**",
				"packages/sw/**"
			]
		},
		{
			"groupName": "[misskey-js] Update dependencies",
			"matchPaths": [
				"packages/misskey-js/**"
			]
		},
		{
			"groupName": "[Root] Update dependencies",
			"matchPaths": [
				"package.json"
			]
		},
		{
			"groupName": "[Tools] Update dependencies",
			"matchPaths": [
				"scripts/**"
			]
		},
		{
			"groupName": "[GitHub Actions] Update dependencies",
			"matchPaths": [
				".github/workflows/**"
			]
		},
		{
			"matchUpdateTypes": [
				"major"
			],
			"dependencyDashboardApproval": true
		},
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchDepTypes": [
				"dependencies"
			],
			"prPriority": 10
		},
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"prPriority": 0
		}
	]
}
