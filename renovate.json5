{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"timezone": "Asia/Tokyo",
	"schedule": [
		"* 0 * * *"
	],
	"packageRules": [
		{
			"groupName": "Backend Updates",
			"matchPaths": [
				"packages/backend/**"
			]
		},
		{
			"groupName": "Frontend Updates",
			"matchPaths": [
				"packages/frontend/**",
				"packages/frontend-embed/**",
				"packages/frontend-shared/**",
				"packages/misskey-bubble-game/**",
				"packages/misskey-reversi/**",
				"packages/sw/**"
			]
		},
		{
			"groupName": "misskey-js Updates",
			"matchPaths": [
				"packages/misskey-js/**"
			]
		},
		{
			"groupName": "Frontend Updates",
			"matchPaths": [
				"packages/frontend/**"
			]
		},
		{
			"matchUpdateTypes": [
				"major"
			],
			"dependencyDashboardApproval": true
		},
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchDepTypes": [
				"dependencies"
			],
			"priority": 10
		},
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"priority": 0
		}
	]
}
